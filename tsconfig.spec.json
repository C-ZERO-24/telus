{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "noEmit": false,
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "@testing-library/react"
    ],
    "composite": true
  },
  "include": [
    "test/*",
    "jest.setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.tsx",
    "**/*.ts",
    "**/*.d.ts",
    "jest.config.cjs"
  ]
}
